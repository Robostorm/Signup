<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import java.net.URL?>
<GridPane fx:controller="Signup.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10">

    <Label
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
        text="First Name" />

    <TextField fx:id="firstName"
            GridPane.columnIndex="1"
            GridPane.rowIndex="0"/>

    <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            text="Lest Name" />

    <TextField fx:id="lastName"
               GridPane.columnIndex="1"
               GridPane.rowIndex="1"/>

    <Label
            GridPane.columnIndex="0"
            GridPane.rowIndex="2"
            text="Email Address" />

    <TextField fx:id="email"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"/>

    <Button fx:id="submit"
            GridPane.columnIndex="0"
            GridPane.rowIndex="3"
            GridPane.columnSpan="2"
            text="Submit"
            onAction="#submit" />

</GridPane>